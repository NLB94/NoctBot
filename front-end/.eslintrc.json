{
    "plugins": [
        "react-hooks"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "no-restricted-imports": "off",
        "react-hooks/rules-of-hooks": "error", // Vérifie les règles des Hooks
        "react-hooks/exhaustive-deps": "error", // Vérifie les tableaux de dépendances
        "keyword-spacing": "off",
        "no-duplicate-imports": "error",
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-extra-semi": "off"
    }
}